<section class="grey">
    <div class="container space-white">
        <div class="row consult-x1">
            <div class="col-md-7">
                <div class="con-fig">
                    <div class="con-fm">
                        <h2>Register for free</h2>
                        <!-- <button class="btn btn-login">Login</button> -->
                    </div>
                    <form (ngSubmit)="onSubmit(f)" action="/register" novalidate #f="ngForm">
                        <div class="form-group name">
                            <label for="exampleFormControlInput1">Firstname</label>
                            <input type="name" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="firstname" [(ngModel)]="user.firstname" name="firstname" required minlength="2" #userfirstName="ngModel">
                            <div *ngIf="userfirstName.errors?.required && userfirstName.touched" class="alert alert-danger">Name is required</div>
                            <div *ngIf="userfirstName.errors?.minlength && userfirstName.touched" class="alert alert-danger">Name should be at least 2 characters</div>
                        </div>
                        <div class="form-group name">
                            <label for="exampleFormControlInput1">Lastname</label>
                            <input type="name" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="lastname" [(ngModel)]="user.lastname" name="lastname" required minlength="2" #userlastName="ngModel">
                            <div *ngIf="userlastName.errors?.required && userlastName.touched" class="alert alert-danger">Name is required</div>
                            <div *ngIf="userlastName.errors?.minlength && userlastName.touched" class="alert alert-danger">Name should be at least 2 characters</div>
                        </div>
                        <div class="form-group name">
                            <label for="exampleFormControlInput1">Email Address</label>
                            <input type="email" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="Email" [(ngModel)]="user.email" name="email" required #userEmail="ngModel">
                            <div *ngIf="userEmail.errors?.required && userEmail.touched" class="alert alert-danger">Email is required</div>
                        </div>
                        <div class="form-group name">
                            <label for="exampleFormControlInput1">Phone number</label>
                            <input type="name" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="phone number" [(ngModel)]="user.phonenumber" name="phonenumber" required minlength="11" #userphoneNumber="ngModel">
                            <div *ngIf="userphoneNumber.errors?.required && userphoneNumber.touched" class="alert alert-danger">Enter a Phone number</div>
                            <div *ngIf="userphoneNumber.errors?.minlength && userphoneNumber.touched" class="alert alert-danger">Enter a valid Phone Number</div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group name">
                                    <label for="exampleFormControlInput1">Gender</label>
                                    <input type="name" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="Gender" [(ngModel)]="user.gender" name="gender" required minlength="2" #userGender="ngModel">
                                    <div *ngIf="userGender.errors?.required && userGender.touched" class="alert alert-danger">Enter a Gender</div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group name">
                                    <label for="exampleFormControlInput1">Country</label>
                                    <input type="name" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="Country" [(ngModel)]="user.country" name="country" required minlength="2" #userCountry="ngModel">
                                    <div *ngIf="userCountry.errors?.required && userCountry.touched" class="alert alert-danger">Enter a country</div>
                                </div>
                            </div>
                        </div>
                        <div ngModelGroup="passwordGroup" [class.has-error]="confirmPassword.touched && confirmPassword.invalid">
                            <div class="form-group name" [class.has-error]="password.touched && password.invalid">
                                <label for="exampleFormControlInput1">Password</label>
                                <input type="password" class="form-control form-control-lg" id="exampleFormControlInput1" placeholder="Password" [(ngModel)]="user.password" name="password" required minlength="2" #userPassword="ngModel">
                                <div *ngIf="userPassword.touched && userPassword.errors?.required" class="alert alert-danger">
                                    Please enter your password
                                </div>
                            </div>
                            <div class="form-group name" [class.has-error]="confirmPassword.touched && confirmPassword.invalid">
                                <label for="exampleFormControlInput1">Confirm Password</label>
                                <input type="password" class="form-control form-control-lg" id="exampleFormControlInput1" appConfirmEqualValidator="password" placeholder="Confirm Password" [(ngModel)]="user.confirmpassword" name="confirmpassword" required minlength="2" #userconfirmPassword="ngModel">
                                <div *ngIf="userconfirmPassword.touched && userconfirmPassword.errors?.required" class="alert alert-danger">
                                    Confirm your password
                                </div>
                                <div *ngIf="userconfirmPassword.touched && userconfirmPassword.errors?.notEqual && !userconfirmPassword.errors?.required" class="alert alert-danger">
                                    Password and Confirm Password does not match
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-send">Login</button>
                        <div class="con-excess">
                            <h2 class="f-got">Forgot password</h2>
                            <h2 class="login">New to MyExpertskills? Click on the register tab above to create a Recruiter account
                            </h2>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-5 wel-job">
                <div class="pr-jb">
                    <img src="{{welcome}}" alt="images here" class="img-responsive">
                </div>
                <h2>Get the right job that matches your acquired skills!</h2>
                <ul class="ul-media">
                    <li><i class="fa fa-caret-right"></i>Get daily job alerts via email</li>
                    <li><i class="fa fa-caret-right"></i>InstaMatch to jobs hiring now</li>
                    <li><i class="fa fa-caret-right"></i>One-click apply to jobs</li>
                    <li><i class="fa fa-caret-right"></i>Mobile optimized job search tools</li>
                </ul>
            </div>
        </div>
    </div>
</section>